@using Membership.Models
@model IEnumerable<MemberModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Modal for ADD, EDIT and DELETE*@

<!-- Add Modal -->
<div id="add" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create a New Member</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<!-- Edit Modal -->
<div id="edit" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Member</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<!-- Delete Modal -->
<div id="delete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Member</h4>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this member?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<div class="container">
    <div style="margin-bottom:24px">
        <h2>Member</h2>
        <button class="btn btn-success" data-toggle="modal" data-target="#add">Add</button>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Contact</th>
                <th>Address</th>
                <th>Gender</th>
                <th>DOB</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input type="text" style="border:none"></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var list in Model)
            {
                <tr>
                    <td>@list.Name</td>
                    <td>@list.Age</td>
                    <td>@list.Contact</td>
                    <td>@list.Address</td>
                    <td>@list.Gender</td>
                    <td>@list.DOB</td>
                    <td>
                        <ul>
                            <li>
                                <button class="btn btn-primary" data-toggle="modal" data-target="#edit">Edit</button>
                            </li>
                            <li>
                                <button class="btn btn-danger" data-toggle="modal" data-target="#delete">Delete</button>
                            </li>
                        </ul>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>


