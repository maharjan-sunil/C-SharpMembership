@using Membership.Models
@model IEnumerable<MemberModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Modal*@

<!-- Add Modal -->
<div id="add" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create a New Member</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<!-- Info Modal -->
<div id="info" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Info of Member</h4>
            </div>
            <div class="delete-modal-body" style="margin:16px">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<!-- Edit Modal -->
<div id="edit" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Member</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<!-- Delete Modal -->
<div id="delete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Member</h4>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this member?</p>
                <input type="hidden" name="memberId" value="" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="DeleteMember()">Delete</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<div class="container">
    <div style="margin-bottom:24px">
        <h2>Member</h2>
        <button class="btn btn-success" data-toggle="modal" data-target="#add">Add</button>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Contact</th>
                <th>Address</th>
                <th>Gender</th>
                <th>DOB</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input type="text" style="border:none" id="name"></td>
                <td><input type="text" style="border:none" id="age"></td>
                <td><input type="text" style="border:none" id="contact"></td>
                <td><input type="text" style="border:none" id="address"></td>
                <td><input type="text" style="border:none" id="gender"></td>
                <td><input type="text" style="border:none" id="DOB"></td>
            </tr>
            @foreach (var list in Model)
            {
                <tr id="member_@list.Id">
                    <td>@list.Name</td>
                    <td>@list.Age</td>
                    <td>@list.Contact</td>
                    <td>@list.Address</td>
                    <td>@list.Gender</td>
                    <td>@list.DOB</td>
                    <td>
                        <div>
                            <a href="#" onclick="InfoMember(@list.Id)">
                                <i class="fa fa-info" aria-hidden="true" title="info"></i>
                            </a>
                            <a href="#" data-toggle="modal" data-target="#edit">
                                <i class="fa fa-pencil" aria-hidden="true" title="edit"></i>
                            </a>
                            <a href="#" data-id="@list.Id" data-toggle="modal" data-target="#delete">
                                <i class="fa fa-trash" aria-hidden="true" title="delete"></i>
                            </a>
                        </div>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $('#delete').on('show.bs.modal', function (e) {
            var id = $(e.relatedTarget).data('id');
            $(e.currentTarget).find('input[name="memberId"]').val(id);
        });

        function InfoMember(id) {
            $.ajax({
                type: 'GET',
                url: '/Member/GetDetail',
                contentType: 'application/json',
                data: {
                    id: id
                },
                success: function (data) {
                    if (data) {
                        var response = GetHtmlResponse(data);
                        $('.delete-modal-body').html(response);
                        $("#info").modal('toggle');
                    }
                },
                error: function (err) {
                    toastr.error("some error occured!");
                },
            });
        }

        function GetHtmlResponse(Data) {
            var htmlResponse = `
                <Table>
                    <tr>
                      <td>Name: ${Data.Name}</td>
                     </tr>
                     <tr>
                      <td>Age: ${Data.Age}</td>
                     </tr>
                     <tr>
                      <td>Address: ${Data.Address}</td>
                      </tr>
                        <tr>
                      <td>Contact: ${Data.Contact}</td>
                     </tr>
                        <tr>
                      <td>Gender: ${Data.Gender}</td>
                         </tr>
                          <tr>
                      <td>DOB: ${Data.DOB}</td>
                    </tr>
                 </Table>`;
            return htmlResponse;
        }

        function DeleteMember() {
            var id = $("input[name = 'memberId']").val()
            $.ajax({
                type: 'GET',
                url: '/Member/Delete',
                contentType: 'application/json',
                data: {
                    id: id
                },
                success: function (data) {
                    if (data) {
                        $('#member_' + id).remove();
                        $('#delete').modal('toggle');
                        toastr.success("Successfully Deleted!");
                    }
                },
                error: function (err) {
                    toastr.error("some error occured!");
                },
            });
        }

    </script>
}
