@using Membership.Helper
@using Membership.Models
@model RegisterModel
@{
    ViewBag.Title = "Register";
}
<h2>@ViewBag.Title.</h2>

<form method="POST">
    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary()

    @Html.LabelFor(x => x.Username)
    @Html.TextBoxFor(x => x.Username)<br />

    @Html.LabelFor(x => x.Password)
    @Html.PasswordFor(x => x.Password)<br />

    @Html.LabelFor(x => x.ConfirmPassword)
    @Html.PasswordFor(x => x.ConfirmPassword)<br />

    @Html.Label("Role")
    @Html.DropDownListFor(x => x.RoleId, new SelectList(Model.ListOfRoles))<br />

    <div class="form-group">
        @Html.CaptchaHelper()
        @Html.InvalidGoogleCaptchMessage("Captcha is not valid !")
    </div>

    <input type="submit" value="Register" />
</form>
