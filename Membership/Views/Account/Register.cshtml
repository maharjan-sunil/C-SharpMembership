@using Membership.Helper
@using Membership.Models
@model RegisterModel
@{
    ViewBag.Title = "Register";
}
<h2>@ViewBag.Title.</h2>

<form method="POST">
    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary()

    <div>
        @Html.LabelFor(x => x.Username)
        @Html.TextBoxFor(x => x.Username)
    </div>

    <div>
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, new { @class = "showCredentials" })
        <i class="fa fa-eye" id="ShowHide" aria-hidden="true"></i>
    </div>

    <div>
        @Html.LabelFor(x => x.ConfirmPassword)
        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "showCredentials" })
        <i class="fa fa-eye" id="ShowHide_1" aria-hidden="true"></i>
    </div>

    <div>
        @Html.Label("Role")
        @Html.DropDownListFor(x => x.RoleId, new SelectList(Model.ListOfRoles))<br />
    </div>
    @*<div class="form-group">
        @Html.CaptchaHelper()
        @Html.InvalidGoogleCaptchMessage("Captcha is not valid !")
    </div>*@

    <input type="submit" value="Register" />
</form>
